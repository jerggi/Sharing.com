              <li><%= link_to "Users", root_url + "users/" %></li>
              <li><%= link_to 'Items', items_path %></li>
            <% end %>

            <% if current_user %>

              <li><%= link_to "New Item", new_item_path %></li>
              <li><%= link_to current_user.email, current_user %></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            <% else %>
              <li><%= link_to "Login", root_url + "login" %></a></li>
              <li><%= link_to "Signup", root_url + "signup" %></a></li>
            <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container">
    <h1 class="text-center">Sharing.com</h1>
    <%= yield %>
  </div>
</body>
</html>
