  <div class="row">
    <div class="col-xs-2">
      <h3>
        <%= @category.name %>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2">
      <%= image_tag @category.avatar.url(:thumb) %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2">
      <strong>Items:</strong>
    </div>
  </div>
  <% @items.each do |item| %>
    <div class="row">
      <div class="col-xs-2">
        <%= link_to item.name, root_url + "items/#{item.id}" %>
      </div>
    </div>
  <% end %>
