<div class="container">
	<h1 class="text-center">Sharing.com</h1>
  <%= link_to 'Home', root_url %>

  <div class="text-center">
  	<%= form_tag('/items/search', method: "get") do %>
  	  <%= text_field_tag(:query) %>
  	  <%= submit_tag("Search") %>
  	<% end %>
    <%= link_to "Categories", "/categories/" %>
  </div>

  <h4>Categories</h4>
	<% @categories.each do |c| %>
    <div class="row">
      <div class="col-xs-2">
        <%= link_to c.name, "/categories/#{c.id}" %>
      </div>
    </div>
	  <div class="row">
      <div class="col-xs-2">
        <%= image_tag c.avatar.url(:thumb) %>
      </div>
	  </div>
	<% end %>
</div>
