<div class="login">
	<div class="container">
      <br>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="row">
          <div class="col-xs-4">
            <%= f.email_field :email, :placeholder => "Email", class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-xs-4">
            <%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-xs-4">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
	</div>
</div>
