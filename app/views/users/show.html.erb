
<div class="panel">
  <div class="panel-header">
    <h4>User</h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-2">
        <%= @user.name %>
      </div>
      <div class="col-xs-2">
        <%= @user.email %>
      </div>
      <div class="col-xs-2">
        <%= @user.telephone %>
      </div>      
    <% if current_user != nil %>
    <% if @user.id == current_user.id %>
      <div class="col-xs-2">
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
      </div>
    <% end %>
    <% end %>
    </div>
  </div>
</div>

<% @user.items.each do |item| %>
    <div class="panel">
      <div class="panel-header">
        <h4><%= link_to item.name, item %></h4>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-2">
            <%= image_tag(item.avatar.url(:thumb), size: "100") %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-2">
            Content:
          </div>
          <div class="col-xs-4">
            <%= item.content %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-2">
            Price:
          </div>
          <div class="col-xs-1">
            <%= item.price %>
          </div>
        </div>
        <div class="row">
          <% if current_user != nil %>
          <% if current_user.id == @user.id %>
            <div class="col-xs-1">
              <%= link_to 'Edit', edit_item_path(item) %>
            </div>

            <div class="col-xs-1">
              <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
