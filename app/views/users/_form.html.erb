<%= form_for @user, html: { multipart: true } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


  <form class="form-horizontal">
    <div class="field form-group">
      <div class="row">
        <%= f.label :name, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :telephone, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.text_field :telephone, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :email, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :password, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :password_confirmation, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="actions form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </form>
<% end %>
