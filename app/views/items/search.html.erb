<h1>Search results</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th>Time</th>
      <th>Unit</th>
      <th>Author</th>
      <th>Location</th>
      <th>Telephone</th>
      <th>Rent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.content %></td>
        <td><%= item.price %></td>
        <td><%= item.time %></td>
        <td><%= item.unit %></td>
        <td><%= item.author %></td>
        <td><%= item.location %></td>
        <td><%= item.telephone %></td>
        <td><%= item.rent %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>