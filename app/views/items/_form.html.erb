
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form class="form-horizontal">
    
    <div class="field form-group">
      <div class="row">
        <%= f.label :name, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :image, class: "col-xs-2"%>
        <div class="col-xs-6">
        <%= f.file_field :avatar%>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :content, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.text_area :content, class: "form-control" %>
        </div>
      </div>
    </div>



    <div class="field form-group">
      <div class="row">
        <%= f.label :price, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.text_field :price, class: "form-control" %>
        </div>
      </div>
    </div>



    <div class="field form-group">
      <div class="row">
        <%= f.label :unit, class: "col-xs-2" %>
        <div class="col-xs-6">
        <%= f.select :unit, [['Hour','hour'],['Day','day'],['Month','month']] %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row">
        <%= f.label :location, class: "col-xs-2" %>
      <div class="col-xs-6">
        <%= f.text_field :location, class: "form-control" %>
      </div>
      </div>
    </div>
    <div class="field form-group">
      <div class="row">
        <%= f.label :rent, class: "col-xs-2" %>
        <div class="col-xs-6">
          <%= f.check_box :rent %>
        </div>  
      </div>
    </div>
    <div class="field form-group">
      <div class="row">
      <%= f.label :category, class: "col-xs-2" %>
      <div class="col-xs-6">
      <select name="category" id="category">
        <% @categories.each do |c| %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% end %>
      </select>
      </div>
      </div>
    </div>
    <br>
    <div class="actions form-group">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </form>
<% end %>
