
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form">
    <div class="form-group">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :avatar %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :time %><br>
      <%= f.number_field :time %>
    </div>
    <div class="field">
      <%= f.label :unit %><br>
      <%= f.select :unit, [['Hour','hour'],['Day','day'],['Month','month']] %>
    </div>
    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <%= f.label :rent %><br>
      <%= f.check_box :rent %>
    </div>
    <div class="field">
      <select name="category" id="category">
        <% @categories.each do |c| %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% end %>
      </select>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
